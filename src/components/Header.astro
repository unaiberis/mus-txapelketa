---
interface Props {
  showBack?: boolean;
}
const { showBack = false } = Astro.props as Props;
const BASE = import.meta.env.BASE_URL || '/';
---

<header class="site-header fixed inset-x-0 top-0 h-14 bg-white/90 backdrop-blur border-b z-50">
  <div class="max-w-full mx-auto px-4 h-full flex items-center">
    {showBack ? (
      <a class="text-sky-700 font-semibold text-sm hover:underline" href={BASE} aria-label="Volver al inicio">‚Üê Volver</a>
    ) : (
      <div class="w-12" />
    )}

    <div class="ml-3 flex items-center gap-3">
      <div class="relative flex items-center" style="width:64px; height:64px;">
        <svg class="w-16 h-16" viewBox="0 0 160 96" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false">
          <!-- Tapete (green felt) inside SVG so everything fits in the same coordinate system -->
          <rect x="5" y="12" width="150" height="102" rx="8" fill="#065f46" opacity="0.95" transform="rotate(-3 70 48)" />

          <!-- Slight stack for depth -->
          <g transform="translate(12,8)">
            <rect x="12" y="8" width="56" height="78" rx="6" fill="#fff" stroke="#e5e7eb" />
          </g>

          <!-- Rey 1 - Oros (gold coin) -->
          <g transform="translate(28,22)">
            <text x="0" y="12" font-size="16" font-weight="700" fill="#111">R</text>
            <circle cx="24" cy="30" r="8" fill="#f59e0b" stroke="#b45309" />
          </g>
          <g transform="translate(12,8)">

            <rect x="38" y="-6" width="56" height="78" rx="6" fill="#fff" stroke="#e5e7eb" />
            </g>
          <!-- Rey 2 - Copas (cup) -->
          <g transform="translate(54,10)">
            <text x="0" y="12" font-size="16" font-weight="700" fill="#111">R</text>
            <path d="M18 26 C18 20, 36 20, 36 26 C36 30, 30 33, 27 34 C24 33,18 30,18 26 Z M26 34 L28 42" fill="#ef4444" stroke="#9f1239" stroke-width="1"/>
          </g>
          <g transform="translate(12,8)">

            <rect x="64" y="8" width="56" height="78" rx="6" fill="#fff" stroke="#e5e7eb" />

          </g>
          <!-- Rey 3 - Espadas (sword) -->
          <g transform="translate(80,20)">
            <text x="0" y="12" font-size="16" font-weight="700" fill="#111">R</text>
            <path d="M26 22 L44 50 L40 54 L22 28 Z" fill="#111" />
            <rect x="24" y="52" width="8" height="3" fill="#6b7280" rx="1" />
          </g>
          <g transform="translate(12,8)">

            <rect x="94" y="28" width="56" height="78" rx="6" fill="#fff" stroke="#e5e7eb" />
          </g>

          <!-- As - Bastos (club-like) -->
          <g transform="translate(114,34)">
            <text x="-4" y="20" font-size="18" font-weight="800" fill="#111">A</text>
            <g transform="translate(18,22)">
              <circle cx="0" cy="0" r="6" fill="#111" />
              <circle cx="12" cy="0" r="6" fill="#111" />
              <circle cx="6" cy="-6" r="6" fill="#111" />
              <rect x="4" y="2" width="4" height="12" fill="#6b7280" rx="1" />
            </g>
          </g>
        </svg>
      </div>

      <div class="leading-tight">
        <div class="font-semibold text-sky-700">Mus Txapelketa</div>
        <div class="text-xs text-slate-500">Generador de parejas y cuadro</div>
      </div>
    </div>

  </div>
</header>

<style>
.site-header { box-shadow: 0 1px 0 rgba(0,0,0,0.04); }
</style>